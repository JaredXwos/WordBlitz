<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordBlitz.Analysis"
             Title="Analysis">
    <Grid>
        <ScrollView>
            <VerticalStackLayout x:Name="Display">
                <HorizontalStackLayout
                    HeightRequest="60">
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
        <VerticalStackLayout>
            <HorizontalStackLayout
                HeightRequest="60"
                VerticalOptions="StartAndExpand"
                BackgroundColor="Grey"
                FlowDirection="RightToLeft"
                >
                <Button
                    Pressed="OnSubmit"
                    VerticalOptions="Center"
                    Text="this is the submit button for analysis"
                    />
                <Label x:Name="Score" Text="Score" HorizontalOptions="Center" FontSize="25" IsVisible="True" Margin="10" HeightRequest="45" WidthRequest="115" VerticalOptions="Center" BackgroundColor="AliceBlue" FlowDirection="LeftToRight"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>